---
import { Image } from "astro:assets";
import logo from "@/assets/bluestem-logo.png";
---

<section class="min-h-screen flex flex-col justify-center px-6 py-16 md:py-24">
	<div class="max-w-2xl mx-auto w-full">
		<!-- Logo -->
		<div class="mb-16 md:mb-20">
			<Image
				src={logo}
				alt="Bluestem"
				width={280}
				height={280}
				format="webp"
				quality={100}
				class="mx-auto"
			/>
		</div>

		<!-- Rule -->
		<div class="w-24 h-0.5 bg-sienna-500 mx-auto mb-12" />

		<!-- Descriptor -->
		<div class="text-center space-y-4">
			<p class="text-lg md:text-xl text-earth-900/90 tracking-wide">
				AI Lab & Technical Consultancy
			</p>
			<p class="text-sm uppercase tracking-[0.25em] text-sienna-600/80">
				Western Kansas
			</p>
		</div>
	</div>

	<!-- Scroll indicator -->
	<div class="absolute bottom-8 left-1/2 -translate-x-1/2">
		<svg
			width="24"
			height="24"
			viewBox="0 0 24 24"
			fill="none"
			class="text-earth-900/30 animate-bounce"
		>
			<path
				d="M12 5v14M5 12l7 7 7-7"
				stroke="currentColor"
				stroke-width="1.5"
				stroke-linecap="round"
				stroke-linejoin="round"
			/>
		</svg>
	</div>
</section>
